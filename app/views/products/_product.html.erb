<% cache product do %>
  <div class="row">
    <div class="col-sm-2 col-md-4">
        <%= link_to product_path(product) do %>
          <% if product.image_url.present? %>
              <%= image_tag(product.image_url, class: 'image-responsive') %>
          <% end %>
          <h5 id="product-name-catalog"><%= link_to product.name, product %></h5>
        <% end %>
        <p><%= product.description %></p>
        <br>
        <strong> $ <%= product.price %></strong>
      </div>
    </div>
  <% end %>
