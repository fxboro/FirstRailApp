<div class="row">
    <div class="thumbnail">
      <% cache @product do %>
      <%= link_to 'Edit', edit_product_path(@product) %> |
      <%= link_to 'Back', products_path %>

      <% if @product.image_url.present? %>
      <%= image_tag @product.image_url, width: "350", class: "img_zoom img-responsive", data_zoom_image: "@product.image_url" %>
      <% end %>
    <div class="col-md-4">
          <p>
            <%= @product.name %>
          </p>

          <p>
            <%= @product.description %>
          </p>

          <p>
            <strong>Colour:</strong> <%= @product.colour %>
          </p>

          <p>
            <strong>Price:$</strong><%= @product.price %>
          </p>

          <%= form_with(url: '/payments/create') do |form| %>
            <%= hidden_field_tag(:product_id, @product.id) %>
            <%= render partial: "shared/stripe_checkout_button" %>
          <% end %>

          <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

          <% if signed_in? %>
              <h4>Add a review:</h4>
              <%= form_for([@product, @product.comments.build]) do |f| %>
                  <p>
                    <%= f.label :body, "Comments" %><br>
                    <%= f.text_area :body %>
                  </p>

                  <p>
                  <div class="rating"></div>
                  </p>

                  <p>
                    <%= f.submit "Submit" %>
                  </p>
              <% end %>
          <% end %>

          <%= render 'comments' %>

          <div class="pages col-sm-12">
            <%= will_paginate @comments %>
          </div>

          </div>
    </div>
  </div>
<% end %>
